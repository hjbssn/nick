            android:layout_marginLeft="48dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorNickDeviceTextBlack"
            android:textSize="17dp"
            android:text="消息推送"
            />
        <ImageButton
            android:layout_marginLeft="336dp"
            android:background="@drawable/nick_device_getin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:background="#fff"
        android:orientation="horizontal">
        <ImageView
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/nick_user_deviceset"
            />
        <TextView
            android:layout_marginLeft="48dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorNickDeviceTextBlack"
            android:textSize="17dp"
            android:text="设备设置"
            />
        <ImageButton
            android:layout_marginLeft="336dp"
            android:background="@drawable/nick_device_getin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="13dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:background="#fff"
        android:orientation="horizontal">
        <ImageView
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/nick_user_nickset"
            />
        <TextView
            android:layout_marginLeft="48dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorNickDeviceTextBlack"
            android:textSize="17dp"
            android:text="设置"
            />
        <ImageButton
            android:layout_marginLeft="336dp"
            android:background="@drawable/nick_device_getin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="40dp"/>
    <Button
        android:layout_gravity="center_horizontal"
        android:layout_width="328dp"
        android:layout_height="48dp"
        android:text="退出"
        android:textSize="17dp"
        android:textColor="#fff"
        android:background="@drawable/let_go_btn_selector"/>

