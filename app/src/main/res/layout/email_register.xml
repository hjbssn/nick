<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:background="#00c4fc">

        <TextView
            android:id="@+id/register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="#fff"
            android:textSize="20sp"
            android:text="注册"/>
        <Button
            android:id="@+id/back_button"
            android:layout_width="7dp"
            android:layout_height="14dp"
            android:layout_marginLeft="17dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/v2_back_arrow"/>
    </RelativeLayout>
    <RelativeLayout
        android:paddingLeft="16dp"
        android:paddingBottom="16dp"
        android:paddingTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/registerPhoneAt"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="邮箱"
            android:textSize="14sp"
            android:textColor="#323232"/>
        <com.example.hjb.nickdemo.view.UserNameEditText
            android:hint="常用邮箱地址"
            android:background="@null"
            android:id="@+id/registerCountry"
            android:layout_marginLeft="107dp"
            android:textColor="#323232"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:background="#b4b4b4"
        android:layout_marginLeft="15dp"
        android:layout_width="328dp"
        android:layout_height="1dp"/>
    <RelativeLayout
        android:paddingLeft="16dp"
        android:paddingBottom="16dp"
        android:paddingTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/country_num"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置密码"
            android:textSize="14sp"
            android:textColor="#323232"/>
        <EditText
            android:layout_marginLeft="107dp"
            android:textColor="#323232"
            android:hint="组合字母、数字或符号"
            android:textSize="14sp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_width="210dp"/>
    </RelativeLayout>
    <View
        android:background="#b4b4b4"
        android:layout_marginLeft="15dp"
        android:layout_width="328dp"
        android:layout_height="1dp"/>
    <RelativeLayout
        android:layout_gravity="center_vertical"
        android:paddingLeft="14dp"
        android:paddingBottom="6dp"
        android:paddingTop="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView

            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="验证码"
            android:textSize="14sp"
            android:textColor="#323232"/>
        <EditText
            android:layout_marginTop="8dp"
            android:layout_marginLeft="107dp"
            android:textColor="#323232"
            android:textSize="14sp"
            android:layout_width="113dp"
            android:layout_height="wrap_content"
            android:background="@null"/>
        <View
            android:layout_centerVertical="true"
            android:background="#b4b4b4"
            android:layout_marginLeft="226dp"
            android:layout_width="1dp"
            android:layout_height="33dp"
            />
        <TextView
            android:textColor="#00c4fc"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="240dp"
            android:text="获取验证码"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:background="#b4b4b4"
        android:layout_marginLeft="15dp"
        android:layout_width="328dp"
        android:layout_height="1dp"/>
    <RelativeLayout
        android:layout_marginTop="14dp"
        android:layout_marginLeft="14dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="11sp"
            android:textColor="#00c4fc"
            android:text="*点击获取验证码，验证码将发送到你的邮箱"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="53dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:textSize="17sp"
            android:text="注册"
            android:textColor="#fff"
            android:layout_centerInParent="true"
            android:layout_width="328dp"
            android:layout_height="42dp"
            android:background="@drawable/let_go_btn_selector"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="7dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/registerTv"
            android:text="*注册代表同意"
            android:textColor="#686868"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="#00c4fc"
            android:text="《尼可网络服务使用协议》"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/registerTv"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="208dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#00c4fc"
            android:text="手机号注册"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</LinearLayout>