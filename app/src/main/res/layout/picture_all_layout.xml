<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:background="#00c4fc">
        <ImageButton
            android:background="#00c4fc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/tongyong_back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="#fff"
            android:textSize="20sp"
            android:text="相册"/>
        <TextView
            android:id="@+id/select"
            android:textColor="#fff"
            android:textSize="20sp"
            android:text="选择"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="306dp"/>
    </RelativeLayout>
    <android.support.design.widget.TabLayout
        android:id="@+id/photoTabLayout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#fff"
        app:tabIndicatorColor="@color/colorPrimary"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/colorPrimary"
        app:tabTextColor="@color/colorLightGray"
        />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="13.6dp"
            android:background="#fff"/>

        <Button
            android:background="@drawable/let_go_btn_selector"
            android:id="@+id/uploadBtn"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:text="上传图片"
            android:textSize="17dp"
            android:textColor="#fff"/>

        <LinearLayout
            android:id="@+id/bottomToolbar"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/shape_bottom_tool_background"
            android:visibility="gone">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="#fff"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/photo_bottom_tool_icon_size"
                        android:layout_height="@dimen/photo_bottom_tool_icon_size"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/xiangce_fenxiang"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/photo_bottom_tool_label_marginTop"
                        android:text="分享"
                        android:textSize="@dimen/textSizeSmall"/>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:id="@+id/addToAlbum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/photo_bottom_tool_icon_size"
                        android:layout_height="@dimen/photo_bottom_tool_icon_size"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/xiangce_tianjiadaoxiangce"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/photo_bottom_tool_label_marginTop"
                        android:text="加入相册"
                        android:textSize="@dimen/textSizeSmall"/>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@color/colorUnClick"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/photo_bottom_tool_icon_size"
                        android:layout_height="@dimen/photo_bottom_tool_icon_size"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/xiangce_xinjianzhuti"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/photo_bottom_tool_label_marginTop"
                        android:text="新建主题"
                        android:textSize="@dimen/textSizeSmall"/>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:id="@+id/download"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/photo_bottom_tool_icon_size"
                        android:layout_height="@dimen/photo_bottom_tool_icon_size"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/xiangce_xiazai"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/photo_bottom_tool_label_marginTop"
                        android:text="下载"
                        android:textSize="@dimen/textSizeSmall"/>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:id="@+id/delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/photo_bottom_tool_icon_size"
                        android:layout_height="@dimen/photo_bottom_tool_icon_size"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/xiangce_shanchu"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/photo_bottom_tool_label_marginTop"
                        android:text="删除"
                        android:textSize="@dimen/textSizeSmall"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>